<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>
  <!--设置过滤器拦截所有请求-->
  <filter>
    <filter-name>LoginFilter</filter-name>
    <filter-class>filter.LoginFilter</filter-class>
    <init-param>
      <param-name>loginStrings</param-name>
      <param-value>/login.jsp;UserLoginServlet</param-value><!-- 登陆请求不过滤-->
    </init-param>
    <init-param>
      <param-name>includeStrings</param-name>
      <param-value>.jsp;</param-value> <!--包含该后缀的请求，都过滤-->
    </init-param>
    <init-param>
      <param-name>redirectPath</param-name> <!--未通过跳转到登陆到界面-->
      <param-value>page/login.jsp</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>LoginFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <servlet>
    <servlet-name>UserLoginServlet</servlet-name>
    <servlet-class>servlet.UserLoginServlet</servlet-class>
  </servlet>
  <servlet>
  <servlet-name>UserRegisterServlet</servlet-name>
  <servlet-class>servlet.UserRegisterServlet</servlet-class>
</servlet>
  <servlet>
    <servlet-name>ExpressionQueryServlet</servlet-name>
    <servlet-class>servlet.ExpressionQueryServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>RecordWriteServlet</servlet-name>
    <servlet-class>servlet.RecordWriteServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>ResocrdQueryServlet</servlet-name>
    <servlet-class>servlet.ResocrdQueryServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>UserLoginServlet</servlet-name>
    <url-pattern>/UserLoginServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>UserRegisterServlet</servlet-name>
    <url-pattern>/urs</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ExpressionQueryServlet</servlet-name>
    <url-pattern>/eqs</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>RecordWriteServlet</servlet-name>
    <url-pattern>/rws</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ResocrdQueryServlet</servlet-name>
    <url-pattern>/rqs</url-pattern>
  </servlet-mapping>
</web-app>
